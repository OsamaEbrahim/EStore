@model EStore.Models.Order

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h4>Checkout</h4>
    <br />
    <a asp-controller="Cart" asp-action="Index" class="btn btn-primary float-left">Back to Cart</a>
    <br />

    <table class="table">
        <thead>
            <tr>
                <th>
                    Product
                </th>
                <th>
                    Unit Price
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    SubTotal
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Details)
            {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubTotal)
                </td>


            </tr>
            }
            <tr><td></td><td></td><td>Total:</td><td>@Model.Total BD</td></tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col-md-12">
            <h4>Payment Details:</h4>
            <hr />
            <div class="col-4">
                <label class="control-label">Card Owner</label>
                <input type="text" class="form-control" required />
            </div>
            <div class="col-4">
                <label class="control-label">Card Number</label>
                <input type="number" class="form-control" required />
            </div>
            <div class="row">
                <div class="col-4">
                    <label class="control-label">Expiration Date</label>
                    <input type="month" class="form-control" required />
                </div>
                <div class="col-2">
                    <label class="control-label">CCV</label>
                    <input type="number" class="form-control" required />
                </div>
            </div>



        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Checkout">
                <h4>Delivery Address:</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="OrderId" />
                <input type="hidden" asp-for="UserId" />
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="BlockNo" class="control-label"></label>
                            <input asp-for="BlockNo" class="form-control" required />
                            <span asp-validation-for="BlockNo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="RoadNo" class="control-label"></label>
                            <input asp-for="RoadNo" class="form-control" required />
                            <span asp-validation-for="RoadNo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="BuildingNo" class="control-label"></label>
                            <input asp-for="BuildingNo" class="form-control" required />
                            <span asp-validation-for="BuildingNo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="FlatNo" class="control-label"></label>
                            <input asp-for="FlatNo" class="form-control" required />
                            <span asp-validation-for="FlatNo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Place Order" class="btn btn-success btn-block" />
                </div>
            </form>
        </div>
    </div>


</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
